<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_play_arrow_white_24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_trailer_item"
        app:layout_constraintBottom_toBottomOf="@id/tv_trailer_item"/>


    <TextView
        android:id="@+id/tv_trailer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:padding="16dp"
        android:text ="Trailer"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toRightOf="@id/iv_play" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4D000000"
        app:layout_constraintTop_toBottomOf="@id/tv_trailer_item"/>

</android.support.constraint.ConstraintLayout>